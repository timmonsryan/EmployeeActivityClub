<% provide(:heading, "Sign Up") %>
<%= form_for @user do |f| %>

	<%= f.label :tellerNumber, "Employee Number" %><br>
	<%= f.text_field :tellerNumber %><br><br>

	<%= f.label :firstName, "First Name" %><br>
	<%= f.text_field :firstName %><br><br>

	<%= f.label :lastName, "Last Name" %><br>
	<%= f.text_field :lastName %><br><br>

	<%= f.label :department %><br>
	<%= f.text_field :department %><br><br>

	<%= f.label :password %><br>
	<%= f.password_field :password %><br><br>

	<%= f.label :password_confirmation, "Password Confirmation" %><br>
	<%= f.password_field :password_confirmation %><br><br>

	<%= f.submit "Create Account" %>
<% end %>
